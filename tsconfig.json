{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "allowJs": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }